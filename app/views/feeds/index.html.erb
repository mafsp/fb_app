<p id="notice"><%= notice %></p>

<header>投稿一覧！</header>

<table>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>タイトル</th>
      <th>内容</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<br>
<br>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.user.name %></td>
        <td><%= feed.title %></td>
        <td><%= feed.content %></td>
        <td><%= feed.image %></td>
        <td><%= link_to 'Show', feed %></td>

        <% if current_user.try(:id) == feed.user_id %>
          <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
          <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '写真投稿ページへ', new_feed_path %>
